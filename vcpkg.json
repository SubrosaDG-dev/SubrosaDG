{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "name": "subrosadg",
    "version": "0.1.0",
    "description": [
        "A pure template discontinuous Galerkin method project."
    ],
    "homepage": "https://github.com/SubrosaDG-dev/SubrosaDG",
    "license": "MIT",
    "$default-features-explanation": "The minimum dependencies required for the project to run",
    "default-features": [
        "main"
    ],
    "features": {
        "main": {
            "description": "Build main dependencies",
            "dependencies": [
                "fmt",
                "magic-enum",
                "eigen3",
                "zlib",
                "dbg-macro"
            ]
        },
        "cuda": {
            "description": "Build with CUDA support",
            "dependencies": [
                "cuda-api-wrappers"
            ]
        },
        "tests": {
            "description": "Build tests",
            "dependencies": [
                "gtest"
            ]
        }
    }
}
