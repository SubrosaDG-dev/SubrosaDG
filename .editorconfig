# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,hpp,cu,cuh}]
indent_size = 2

[*.{tex,cls}]
indent_size = 2

[.clang*]
indent_size = 2
