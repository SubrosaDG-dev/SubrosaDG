{
    // doxdocgen
    "doxdocgen.file.copyrightTag": [
        "@copyright Copyright (c) 2022 - {year} by SubrosaDG developers. All rights reserved."
    ],
    "doxdocgen.generic.authorTag": "@author Yufei.Liu, Calm.Liu@outlook.com | Chenyu.Bao, bcynuaa@163.com",
    "doxdocgen.file.versionTag": "@version 0.1.0",
    "doxdocgen.file.customTag": [
        "SubrosaDG is free software and is distributed under the MIT license."
    ],
    "doxdocgen.file.fileOrder": [
        "file",
        "brief",
        "empty",
        "author",
        "date",
        "empty",
        "version",
        "copyright",
        "custom"
    ],

    // git
    "git.showActionButton": {
        "publish": false,
        "sync": false
    },
    "git.showPushSuccessNotification": true,
    "git.autoRepositoryDetection": false,

    // C++
    "C_Cpp.intelliSenseEngine": "disabled",

    // clangd
    "clangd.path": "/opt/intel/oneapi/compiler/latest/bin/compiler/clangd",
    "clangd.arguments": [
        "--all-scopes-completion",
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--enable-config",
        "--function-arg-placeholders=0",
        "--header-insertion=never",
        "--j=@NUMBER_OF_PHYSICAL_CORES@",
        "--pch-storage=memory"
    ],
    "[c, cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },

    // latex
    "files.exclude": {
        "**/*.aux": true,
        "**/*.bbl": true,
        "**/*.bcf": true,
        "**/*.blg": true,
        "**/*.fls": true,
        "**/*.fff": true,
        "**/*.listing": true,
        "**/*.lof": true,
        "**/*.lot": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex": true,
        "**/*.synctex(busy)": true,
        "**/*.synctex.gz": true,
        "**/*.synctex.gz(busy)": true,
        "**/*.idx": true,
        "**/*.nav": true,
        "**/*.snm": true,
        "**/*.ptc": true,
        "**/*.toc": true,
        "**/*.ttt": true,
    }
}
