{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Develop without MPI",
            "displayName": "Develop without MPI",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "DEVELOP_COMPILER": true,
                "SUBROSA_DG_BUILD_ALL": true,
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        },
        {
            "name": "Release without MPI",
            "displayName": "Release without MPI",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "description": "Develop without MPI",
            "displayName": "default",
            "configurePreset": "Develop without MPI"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "description": "Develop without MPI",
            "displayName": "default",
            "configurePreset": "Develop without MPI",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
