{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "Base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "Build minimum with release",
            "displayName": "Build minimum with release",
            "description": "Build minimum with release",
            "inherits": "Base",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": false,
                "SUBROSA_DG_DEVELOP": false
            }
        },
        {
            "name": "Build all with release",
            "displayName": "Build all with release",
            "description": "Build all with release",
            "inherits": "Base",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": false
            }
        },
        {
            "name": "Build minimum with debug",
            "displayName": "Build minimum with debug",
            "description": "Build minimum with debug",
            "inherits": "Base",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": false,
                "SUBROSA_DG_DEVELOP": true
            }
        },
        {
            "name": "Build all with debug",
            "displayName": "Build all with debug",
            "description": "Build all with debug",
            "inherits": "Base",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": true
            }
        },
        {
            "name": "Build docs",
            "displayName": "Build docs",
            "description": "Build docs",
            "inherits": "Base",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_DOCS": true,
                "SUBROSA_DG_DEVELOP": true
            }
        }
    ]
}
