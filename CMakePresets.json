{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "LinuxBase",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "Build in Linux",
            "displayName": "Build in Linux",
            "description": "Build all in release without MPI in Linux",
            "inherits": "LinuxBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true
            }
        },
        {
            "name": "Build with MPI in Linux",
            "displayName": "Build with MPI in Linux",
            "description": "Build all in release in Linux",
            "inherits": "LinuxBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_WITH_MPI": true
            }
        },
        {
            "name": "Develop in Linux",
            "displayName": "Develop in Linux",
            "description": "Build all in develop without MPI in Linux",
            "inherits": "LinuxBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": true
            }
        },
        {
            "name": "Develop with MPI in Linux",
            "displayName": "Develop with MPI in Linux",
            "description": "Build all in develop in Linux",
            "inherits": "LinuxBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": true,
                "SUBROSA_DG_WITH_MPI": true
            }
        },
        {
            "name": "DarwinBase",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "Build in Darwin",
            "displayName": "Build in Darwin",
            "description": "Build all in release without MPI in Darwin",
            "inherits": "DarwinBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true
            }
        },
        {
            "name": "Build with MPI in Darwin",
            "displayName": "Build with MPI in Darwin",
            "description": "Build all in release in Darwin",
            "inherits": "DarwinBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_WITH_MPI": true
            }
        },
        {
            "name": "Develop in Darwin",
            "displayName": "Develop in Darwin",
            "description": "Build all in develop without MPI in Darwin",
            "inherits": "DarwinBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": true
            }
        },
        {
            "name": "Develop with MPI in Darwin",
            "displayName": "Develop with MPI in Darwin",
            "description": "Build all in develop in Darwin",
            "inherits": "DarwinBase",
            "cacheVariables": {
                "SUBROSA_DG_BUILD_ALL": true,
                "SUBROSA_DG_DEVELOP": true,
                "SUBROSA_DG_WITH_MPI": true
            }
        }
    ]
}
